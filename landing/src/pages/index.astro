---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to My Landing Page">
	<main>
		<h1>ðŸš€ My Awesome Landing Page!</h1>
		<p>
			Welcome to this Astro-powered site. Edit this page to make it your own.
		</p>
		<p>
			Explore more about Astro:
			<a href="https://docs.astro.build/en/getting-started/" target="_blank" rel="noopener noreferrer">Astro Docs</a>
		</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	p {
		margin-bottom: 1rem;
	}
	a {
		color: rgb(var(--accent-light));
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
	}
</style>
